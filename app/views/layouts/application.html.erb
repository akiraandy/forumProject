<!DOCTYPE html>
<html>
  <head>
    <title>ForumProject</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div>
        <ul class="nav nav-pills nav-fill">
        <% if current_user %>
            <li class="nav-item nav-link"><strong><%= current_user.name %></strong></li>
            <li class="nav-item"><%= link_to "Categories", categories_path, class: "nav-link" %>
            <% if current_user.admin %>
                <li class="nav-item"><%= link_to "Manage users", users_path, class: "nav-link" %>
            <% end %>
            <li class="nav-item"><%= link_to "Sign out", signout_path, id: "sign_out", class: "nav-link" %></li>
        <% else %>
            <%= link_to "Sign in with Google", "/auth/google_oauth2", id: "sign_in" %>
        <% end %>
        </ul>
    </div>
    <div class="container">
        <%= yield %>
    </div>
  </body>
</html>
