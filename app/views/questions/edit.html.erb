<div class="form-group">
    <%= form_for @question do |f| %>
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>
        <%= f.label :body %>
        <%= f.text_area :body, class: "form-control", rows: "10" %>
        <%= f.submit "Edit comment", class: "btn btn-primary btn-block", style: "margin-top: 10px" %>
    <% end %>
</div>
