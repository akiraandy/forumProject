<% if @categories %>
    <ul class="list-group">
        <% @categories.each do |category| %>
            <li class="list-group-item d-flex justify-content-between align-items-center"><%= link_to category.name, category_path(category), class: "btn btn-primary btn-lg btn-block"%></li>
        <% end %>
    </ul>
<% end %>
<% if @current_user.admin || @current_user.mod %>
    <%= link_to "New Category", new_category_url, class: "btn btn-success btn-lg btn-block" %>
<% end %>
