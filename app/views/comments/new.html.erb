<h1>New Comment</h1>
<% if @comment.errors %>
    <%= render 'shared/errors', object: @comment %>
<% end %>
<%= form_for @comment, url: {action: "create"} do |f| %>
    <%= f.label :body %>
    <%= f.text_area :body %>
    <%= f.submit "Submit comment" %>
<% end %>

<%= link_to "Back to question", question_path(@question)%>
